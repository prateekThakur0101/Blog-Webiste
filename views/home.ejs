<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Blogify - Share Your Stories</title>
</head>
<body>
  <%- include('./partials/nav') %>

  <!-- Hero Section -->
  <% if (!locals.user) { %>
  <section class="hero-section">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="hero-title">Welcome to Blogify</h1>
          <p class="hero-subtitle">Discover amazing stories, share your thoughts, and connect with a community of writers and readers.</p>
          <div class="mt-4">
            <a href="/user/signup" class="btn btn-modern btn-lg me-3">
              <i class="bi bi-person-plus me-2"></i>Get Started
            </a>
            <a href="#blogs" class="btn btn-outline-light btn-lg">
              <i class="bi bi-arrow-down me-2"></i>Explore Blogs
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% } %>

  <!-- Blog Section -->
  <div class="container my-5" id="blogs">
    <div class="row mb-4">
      <div class="col-12 text-center">
        <h2 class="display-5 fw-bold text-primary mb-3">Latest Stories</h2>
        <p class="lead text-muted">Discover the latest thoughts and stories from our community</p>
      </div>
    </div>
    
    <% if (blogs.length === 0) { %>
      <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
          <div class="py-5">
            <i class="bi bi-journal-text display-1 text-muted mb-4"></i>
            <h3 class="text-muted">No blogs yet</h3>
            <p class="text-muted">Be the first to share your story!</p>
            <% if (locals.user) { %>
              <a href="/blog/add-new" class="btn btn-modern mt-3">
                <i class="bi bi-plus-circle me-2"></i>Write Your First Blog
              </a>
            <% } else { %>
              <a href="/user/signup" class="btn btn-modern mt-3">
                <i class="bi bi-person-plus me-2"></i>Join Us
              </a>
            <% } %>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% blogs.forEach((blog, index) => { %>
          <div class="col fade-in-up" style="animation-delay: <%= index * 0.1 %>s">
            <div class="modern-card h-100">
              <div class="position-relative overflow-hidden">
                <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="<%= blog.title %>" style="height: 250px; object-fit: cover;">
                <div class="position-absolute top-0 end-0 m-3">
                  <span class="badge bg-primary">
                    <i class="bi bi-calendar3 me-1"></i>
                    <%= new Date(blog.createdAt).toLocaleDateString() %>
                  </span>
                </div>
              </div>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-3"><%= blog.title %></h5>
                <p class="card-text text-muted flex-grow-1">
                  <%= blog.body.substring(0, 120) %>...
                </p>
                <div class="d-flex justify-content-between align-items-center mt-3">
                  <div class="d-flex align-items-center">
                    <img src="<%= blog.createdBy.profileImageURL %>" alt="<%= blog.createdBy.fullName %>" class="author-avatar me-2" width="30" height="30">
                    <small class="text-muted"><%= blog.createdBy.fullName %></small>
                  </div>
                  <a href="/blog/<%= blog._id %>" class="btn btn-modern btn-sm">
                    <i class="bi bi-arrow-right me-1"></i>Read More
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <!-- Call to Action Section -->
  <% if (!locals.user && blogs.length > 0) { %>
  <section class="py-5" style="background: var(--light-gradient);">
    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <h3 class="fw-bold mb-3">Ready to Share Your Story?</h3>
          <p class="lead text-muted mb-4">Join our community of writers and readers. Share your thoughts, connect with others, and discover amazing content.</p>
          <a href="/user/signup" class="btn btn-modern btn-lg">
            <i class="bi bi-pen me-2"></i>Start Writing Today
          </a>
        </div>
      </div>
    </div>
  </section>
  <% } %>

  <%- include('./partials/footer') %>
  <%- include('./partials/scripts') %>
</body>
</html>
